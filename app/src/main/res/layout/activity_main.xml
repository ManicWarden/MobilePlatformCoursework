<?xml version="1.0" encoding="utf-8"?>
<!--
 Frazer J Johnston. Matriculation Number: S1623945
  -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manicwarden.coursework.MainActivity">




    <TextView
        android:id="@+id/NameMatricNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frazer J Johnston. Matriculation Number: S1623945"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnExit"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:text="Exit"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnPlannedRoadworks"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnPlannedRoadworks"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:text="View Planned Roadworks"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/btnCurrentIncidents"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btnCurrentIncidents"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:text="Current Incidents"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnbyName"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:layout_marginStart="15dp"
        android:text="Find Planned Roadworks by Name"
        app:layout_constraintBottom_toTopOf="@id/btnCurrentIncidents"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/btnbyDate"
        android:layout_marginEnd="20sp"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:text="Find Planned Roadworks by Date"
        app:layout_constraintBottom_toTopOf="@id/btnPlannedRoadworks"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="196dp" />

    <TextView
        android:id="@+id/About"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/AboutText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"

        />

    <TextView
        android:id="@+id/Instructions"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/Instructions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/About" />

</android.support.constraint.ConstraintLayout>
